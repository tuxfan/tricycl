#------------------------------------------------------------------------------#
# CFLAGS
#------------------------------------------------------------------------------#

CFLAGS="-g -O0 -m64 -std=c99 -pedantic -Werror -Wall"

#------------------------------------------------------------------------------#
# FFLAGS
#------------------------------------------------------------------------------#

FCFLAGS="-g -O0 -m64 -std=gnu -pedantic-errors -Werror -Wall"

#------------------------------------------------------------------------------#
# Fortran module search path flag
#------------------------------------------------------------------------------#

FC_MODULE_PATH_FLAG="-J"

#------------------------------------------------------------------------------#
# OpenCL library
#------------------------------------------------------------------------------#

OPENCL_CPPFLAGS="-I/usr/include"
OPENCL_LDFLAGS="-L/usr/lib64"
OPENCL_LIBS="-lOpenCL"
OPENCL_CHECKHEADER="CL/opencl.h"
