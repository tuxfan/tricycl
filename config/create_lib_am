#! /usr/bin/env bash
################################################################################
# Copyright (c) 2012 Los Alamos National Security, LLC
# All rights reserved.
################################################################################

# OS X sucks!
find_exec="find" && [ `uname -o` == "Darwin" ] && find_exec="find -E"
src_str=".*\.\(c*\|f90\)" && [ `uname -o` == "Darwin" ] && \
	src_str=".*\.(c*|f90)"

echo "################################################################################"
echo "# TriCyCL library Makefile.am"
echo "# THIS FILE WAS GENERATED BY config/bootstrap DO NOT EDIT"
echo "################################################################################"
echo

################################################################################
# General settings
################################################################################

echo "#------------------------------------------------------------------------------#"
echo "# General Settings"
echo "#------------------------------------------------------------------------------#"
echo
echo "lib_LTLIBRARIES = libtricycl.la"
echo
echo "INCLUDES = -I\${top_srcdir}/src/include \\"
echo "	-I\${top_builddir}/local \\"
echo "	@EXTRA_CPPFLAGS@"
echo
echo "libtricycl_includedir = \${includedir}"
echo
echo "AM_CXXFLAGS = -std=c++0x"
echo
echo "BUILT_SOURCES = \${top_builddir}/local/kernel_strings.c"
echo
echo "\${top_builddir}/local/kernel_strings.c : \${top_srcdir}/src/*/*.cl"
echo "	\${top_srcdir}/utils/stringify_kernel_files \\"
echo "		\${top_srcdir}/src \${top_builddir}/local/kernel_strings"

echo
echo "#------------------------------------------------------------------------------#"
echo "# Headers"
echo "#------------------------------------------------------------------------------#"
echo
echo "libtricycl_include_HEADERS = \\"
echo "	\${top_builddir}/local/kernel_strings.h \\"

numfiles=`$find_exec src -type f -regex '.*\.h' | wc -l`
cnt=1
for file in `$find_exec src -type f -regex '.*\.h'` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "#------------------------------------------------------------------------------#"
echo "# Sources"
echo "#------------------------------------------------------------------------------#"
echo
echo "libtricycl_la_SOURCES = \\"
echo "	\${top_builddir}/local/kernel_strings.c \\"

numfiles=`$find_exec src -type f -regex $src_str | wc -l`
cnt=1
for file in `$find_exec src -type f -regex $src_str | sort` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "libtricycl_la_LDFLAGS = @VERSION_INFORMATION@ \\"
echo "	@EXTRA_LDFLAGS@"
echo "libtricycl_la_LIBADD = @EXTRA_LIBS@"
